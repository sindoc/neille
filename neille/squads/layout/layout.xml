<?xml version="1.0" encoding="utf-8"?>
<layout xmlns="http://sina.khakbaz.com/2010/neille/ns/layout"
	unit-constructor="make-button-region"
	unit-callback="onclick"
	width="9.6" 
	height="3.7" 
	onbx="108" 
	onby="150">

  <config>
    <param name="meta-detail"/>
    <param name="meta-hero"/>
    <param name="meta-units"/>
    <param name="detail-card"/>
    <param name="hero-card"/>
    <param name="previous-cards"/>
    <param name="next-cards"/>
  </config>

  <row height="0.15">
    <col id="meta-detail"
	 label="Detail View"
	 model="$meta-detail"
	 constructor="make-region"
	 view="view%"
	 width="2"/>

    <col width="0.3"/>

    <col id="meta-hero"
	 constructor="make-region"
	 model="$meta-hero"
	 view="view%"
	 label="Hero"/>

    <col width="0.1"/>

    <col id="meta-units" 
	 constructor="make-region"
	 model="$meta-units"
	 view="view%"
	 label="Units"
	 width="6"/>
  </row>

  <row height="2">
    <col id="detail" 
	 model="$detail-card"
	 view="card-view%"
	 width="2"/>

    <col width="0.3"/>

    <col id="hero" 
	 model="$hero-card"
	 view="card-view%"
	 height="1"/>

    <col width="0.1"/>

    <col id="units" 
	 model="cardlist%" 
	 width="6"
	 height="1">
      <row>
	<col/><col/><col/><col/><col/><col/>
      </row>
    </col>

  </row>

  <row height="0.2"/>

  <row height="0.15">
    <col width="3.75"/>

    <col id="previous-cards"
	 model="$previous-cards"
	 view="view%"
	 label="&lt; Previous"
	 width="0.8"/>

    <col width="0.2"/>

    <col id="next-cards" 
	 model="$next-cards"
	 view="view%"
	 label="Next &gt;"
	 width="0.8"/>
  </row>

  <row height="0.05"/>

  <row height="1">
    <col width="0.25"/>
    <col id="card-list" 
	 model="cardlist%"
	 width="9">
      <row>
	<col/><col/><col/><col/><col/>
	<col/><col/><col/><col/>
      </row>
    </col>
  </row>
</layout>
