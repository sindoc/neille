<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns="http://sina.khakbaz.com/2010/neille/ns/layout"
	width="7.5" 
	height="4.7" 
	onbx="108"
	onby="150">

  <config>
    <param name="human"/>
    <param name="robot"/>
    <param name="morale-callback"/>
  </config>

  <!-- Begin Robot -->

  <row height="0.16">

    <col width="1.2"/>

    <col id="ready-counter" 
	 width="6" 
	 model="cardlist%">
      <row>
	<col/><col/><col/><col/><col/><col/>
      </row>
    </col>
  </row>

  <row>
    <col id="deck"/>
    <col width="0.2"/>
    <col id="staging" 
	 width="6" 
	 model="cardlist%">
      <row>
	<col/><col/><col/><col/><col/><col/>
      </row>
    </col>
  </row>

  <row height="0.1"/>

  <row>
    <col id="reserve" 
	 model="deck%"/>

    <col width="0.2"/>

    <col id="inplay" 
	 width="4" 
	 model="cardlist%">
      <row>
	<col/><col/><col/><col/>
      </row>
    </col>

    <col width="0.2"/>

    <col id="graveyard" 
	 model="deck%"/>

    <col width="0.3"/>

    <col id="morale" 
	 model="$robot"
	 width="0.3"
	 constructor="make-background-region"
	 callback="$morale-callback"/>
  </row>
  
  <!-- End Robot -->

  <row height="0.1"/>

  <!-- Begin Human -->

  <row>
    <col id="-reserve" 
	 model="deck%"/>

    <col width="0.2"/>

    <col id="-inplay" 
	 width="4" 
	 model="cardlist%">
      <row>
	<col/><col/><col/><col/>
      </row>
    </col>

    <col width="0.2"/>

    <col id="-graveyard" 
	 model="deck%"/>

    <col width="0.3"/>

    <col id="-morale" 
	 model="$human" 
	 width="0.3"
	 constructor="make-background-region"
	 callback="$morale-callback"/>	 
  </row>

  <row height="0.1"/>

  <row>
    <col id="-deck"/>
    <col width="0.2"/>
    <col id="-staging" 
	 width="6" 
	 model="cardlist%">
      <row>
	<col/><col/><col/><col/><col/><col/>
      </row>
    </col>
  </row>

  <row height="0.16">
    <col width="1.2"/>
    <col id="-ready-counter" 
	 width="6" 
	 model="cardlist%">
      <row>
	<col/><col/><col/><col/><col/><col/>
      </row>
    </col>
  </row>

  <!-- End Human -->

</layout>